---
import Logo from '../assets/logo.svg?raw';

import { Button } from './ui/Button';

const links = [
  { href: '#', label: 'Ons werk' },
  { href: '#', label: 'FAQ' },
  { href: '#', label: 'Contact' },
];
---

<header>
  <nav
    class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <a href="/" class="-m-1.5 p-1.5">
      <span class="sr-only">Illusion ink</span>

      <span class="block w-16 h-auto">
        <Fragment set:html={Logo} />
      </span>
    </a>

    <div class="flex lg:hidden">
      <div class="max-[340px]:hidden">
        <Button size="md" href="https://salonized.com">Boek bespreking</Button>
      </div>

      <button
        type="button"
        class="menu-toggle ml-2 -m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-white"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>

    <div
      class="hidden lg:flex items-center lg:gap-x-12 text-white text-sm font-semibold leading-6"
    >
      {links.map((link) => <a href={link.href}>{link.label}</a>)}

      <Button size="lg" href="https://salonized.com">Boek bespreking</Button>
    </div>
  </nav>

  <div id="menu" class="hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-10"></div>
    <div
      class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-black px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
    >
      <div class="flex items-center justify-between">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Illusion ink</span>

          <span class="block w-16 h-auto">
            <Fragment set:html={Logo} />
          </span>
        </a>

        <button
          type="button"
          class="menu-toggle -m-2.5 rounded-md p-2.5 text-white"
        >
          <span class="sr-only">Close menu</span>
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <div class="mt-6 flow-root">
        <div class="divide-y divide-white/30">
          <div class="space-y-2 py-6">
            {
              links.map((link) => (
                <a
                  class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white hover:bg-white-900"
                  href={link.href}
                >
                  {link.label}
                </a>
              ))
            }
          </div>

          <div class="py-8">
            <Button size="lg" href="https://salonized.com">
              Boek bespreking
            </Button>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  function handleClick() {
    const menu = document.getElementById('menu');

    if (!menu) {
      console.error('Menu not found');
      return;
    }

    if (menu.style.display === 'block') {
      menu.style.display = 'none';
    } else {
      menu.style.display = 'block';
    }
  }

  document
    .querySelectorAll('.menu-toggle')
    .forEach((el) => el.addEventListener('click', handleClick));
</script>
