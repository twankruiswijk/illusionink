<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,300;8..144,600;8..144,700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <meta name="description" content={metaDescription} />
    <meta
      name="keywords"
      content="tattoos, zelfexpressie, persoonlijke verhalen, creativiteit, lichaamskunst, illusion, realisme tattoo, tattoo kunst, individuele expressie, artistieke tattoos, tattoo ontwerp, persoonlijke kunst, lichaamspositiviteit"
    />
    <meta name="author" content="Illusion Ink." />

    <!-- Open Graph tags for social media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={social['src']} />
    <meta property="og:url" content="https://www.illusionink.nl" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={social['src']} />
  </head>

