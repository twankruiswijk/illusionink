---
import social from '../assets/social.jpg';

type Props = {
  title: string;
};

const { title } = Astro.props;
const metaDescription =
  'Realistische tatoeages waar vakmanschap en jouw verhaal samenkomen. We zetten jouw ideeÃ«n om in kunst die spreekt, met of zonder verborgen betekenissen.';

